@model List<SD_Sinema.Web.Models.SessionViewModel>

@{
    ViewData["Title"] = "Seanslar";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Seanslar</h2>
        <a asp-action="Create" class="btn btn-primary">Yeni Seans Ekle</a>
    </div>

    <div class="row">
        @foreach (var session in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@session.MovieTitle</h5>
                        <p class="card-text"><strong>Salon:</strong> @session.SalonName</p>
                        <p class="card-text"><strong>Tarih:</strong> @session.StartTime.ToString("dd/MM/yyyy")</p>
                        <p class="card-text"><strong>Saat:</strong> @session.StartTime.ToString("HH:mm")</p>
                        <p class="card-text"><strong>Fiyat:</strong> @session.Price.ToString("C")</p>
                        <p class="card-text"><small class="text-muted">Durum: @(session.IsActive ? "Aktif" : "Pasif")</small></p>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Details" asp-route-id="@session.Id" class="btn btn-outline-primary btn-sm">Detay</a>
                            <a asp-action="Edit" asp-route-id="@session.Id" class="btn btn-outline-warning btn-sm">DÃ¼zenle</a>
                            <a asp-action="Delete" asp-route-id="@session.Id" class="btn btn-outline-danger btn-sm">Sil</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 