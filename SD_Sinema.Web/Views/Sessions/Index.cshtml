@model List<SD_Sinema.Web.Models.SessionViewModel>

@{
    ViewData["Title"] = "Seanslar";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h2 fw-bold text-primary mb-2">
            <i class="fas fa-calendar-alt me-2"></i>Seanslar
        </h1>
        <p class="text-muted mb-0">Tüm seanslarımızı görüntüleyin</p>
    </div>
    <a asp-action="Create" class="btn btn-primary btn-lg">
        <i class="fas fa-plus me-2"></i>Yeni Seans Ekle
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="row g-4">
        @foreach (var session in Model)
        {
            <div class="col-lg-6 col-md-12">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-header bg-gradient-primary text-white py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0 fw-bold">@session.MovieTitle</h5>
                            <span class="badge bg-light text-dark fs-6">@session.Price.ToString("C")</span>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3 mb-3">
                            <div class="col-6">
                                <div class="d-flex align-items-center text-muted">
                                    <i class="fas fa-building me-2 text-primary"></i>
                                    <span>@session.SalonName</span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center text-muted">
                                    <i class="fas fa-calendar me-2 text-primary"></i>
                                    <span>@session.StartTime.ToString("dd.MM.yyyy")</span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center text-muted">
                                    <i class="fas fa-clock me-2 text-primary"></i>
                                    <span>@session.StartTime.ToString("HH:mm")</span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-circle me-2 @(session.IsActive ? "text-success" : "text-danger")"></i>
                                    <span class="@(session.IsActive ? "text-success" : "text-danger") fw-bold">
                                        @(session.IsActive ? "Aktif" : "Pasif")
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <a asp-action="Details" asp-route-id="@session.Id" class="btn btn-primary">
                                <i class="fas fa-info-circle me-2"></i>Detaylar
                            </a>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@session.Id" class="btn btn-outline-warning">
                                    <i class="fas fa-edit me-1"></i>Düzenle
                                </a>
                                <a asp-action="Delete" asp-route-id="@session.Id" class="btn btn-outline-danger">
                                    <i class="fas fa-trash me-1"></i>Sil
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <div class="card border-0 bg-light">
            <div class="card-body py-5">
                <i class="fas fa-calendar-alt fa-4x text-muted mb-3"></i>
                <h5 class="text-muted">Henüz seans bulunmuyor</h5>
                <p class="text-muted mb-4">İlk seansınızı ekleyerek başlayın!</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>İlk Seansı Ekle
                </a>
            </div>
        </div>
    </div>
}

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #0d6efd, #0056b3);
    }
</style> 