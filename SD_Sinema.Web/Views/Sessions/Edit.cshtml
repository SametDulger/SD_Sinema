@model SD_Sinema.Web.Models.SessionViewModel

@{
    ViewData["Title"] = "Seans Düzenle";
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card border-0 shadow">
            <div class="card-header bg-warning text-dark py-3">
                <h3 class="mb-0">
                    <i class="fas fa-edit me-2"></i>Seans Düzenle
                </h3>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedAt" />
                    
                    <div class="row g-3">
                        <div class="col-12">
                            <label asp-for="MovieId" class="form-label fw-bold">
                                <i class="fas fa-film me-2 text-primary"></i>Film
                            </label>
                            <select asp-for="MovieId" class="form-select form-select-lg" asp-items="@ViewBag.Movies">
                                <option value="">Film Seçin</option>
                            </select>
                            <span asp-validation-for="MovieId" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="SalonId" class="form-label fw-bold">
                                <i class="fas fa-building me-2 text-primary"></i>Salon
                            </label>
                            <select asp-for="SalonId" class="form-select form-select-lg" asp-items="@ViewBag.Salons">
                                <option value="">Salon Seçin</option>
                            </select>
                            <span asp-validation-for="SalonId" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="StartTime" class="form-label fw-bold">
                                <i class="fas fa-calendar me-2 text-primary"></i>Başlangıç Zamanı
                            </label>
                            <input asp-for="StartTime" class="form-control" type="datetime-local" />
                            <span asp-validation-for="StartTime" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Price" class="form-label fw-bold">
                                <i class="fas fa-money-bill me-2 text-primary"></i>Fiyat
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">₺</span>
                                <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="IsActive" class="form-check-label fw-bold">
                                    <i class="fas fa-toggle-on me-2 text-success"></i>Aktif
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Geri Dön
                        </a>
                        <button type="submit" class="btn btn-warning btn-lg">
                            <i class="fas fa-save me-2"></i>Değişiklikleri Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 