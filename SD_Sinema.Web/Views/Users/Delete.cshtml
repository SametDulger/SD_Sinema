@model SD_Sinema.Web.Models.UserViewModel

@{
    ViewData["Title"] = "Kullanıcı Sil";
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card border-0 shadow">
            <div class="card-header bg-danger text-white py-3">
                <h3 class="mb-0">
                    <i class="fas fa-trash me-2"></i>Kullanıcı Sil
                </h3>
            </div>
            <div class="card-body p-4">
                <div class="alert alert-danger border-0">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <div>
                            <h4 class="alert-heading mb-2">Bu kullanıcıyı silmek istediğinizden emin misiniz?</h4>
                            <p class="mb-0">Bu işlem geri alınamaz ve kullanıcı ile ilgili tüm veriler silinecektir.</p>
                        </div>
                    </div>
                </div>
                
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <div class="bg-primary bg-gradient rounded-circle p-2 me-3">
                                <i class="fas fa-user text-white"></i>
                            </div>
                            <div>
                                <strong>Ad:</strong><br>
                                <span class="text-muted">@Model.FirstName</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <div class="bg-primary bg-gradient rounded-circle p-2 me-3">
                                <i class="fas fa-user text-white"></i>
                            </div>
                            <div>
                                <strong>Soyad:</strong><br>
                                <span class="text-muted">@Model.LastName</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <div class="bg-info bg-gradient rounded-circle p-2 me-3">
                                <i class="fas fa-envelope text-white"></i>
                            </div>
                            <div>
                                <strong>E-posta:</strong><br>
                                <span class="text-muted">@Model.Email</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <div class="bg-success bg-gradient rounded-circle p-2 me-3">
                                <i class="fas fa-phone text-white"></i>
                            </div>
                            <div>
                                <strong>Telefon:</strong><br>
                                <span class="text-muted">@Model.Phone</span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <form asp-action="Delete" method="post" class="mt-4 pt-3 border-top">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>İptal
                        </a>
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="fas fa-trash me-2"></i>Kullanıcıyı Sil
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 