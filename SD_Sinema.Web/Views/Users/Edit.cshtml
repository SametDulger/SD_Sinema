@model SD_Sinema.Web.Models.UserViewModel

@{
    ViewData["Title"] = "Kullanıcı Düzenle";
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card border-0 shadow">
            <div class="card-header bg-warning text-dark py-3">
                <h3 class="mb-0">
                    <i class="fas fa-edit me-2"></i>Kullanıcı Düzenle
                </h3>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedAt" />
                    
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="FirstName" class="form-label fw-bold">
                                <i class="fas fa-user me-2 text-primary"></i>Ad
                            </label>
                            <input asp-for="FirstName" class="form-control" placeholder="Adınızı giriniz" />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="LastName" class="form-label fw-bold">
                                <i class="fas fa-user me-2 text-primary"></i>Soyad
                            </label>
                            <input asp-for="LastName" class="form-control" placeholder="Soyadınızı giriniz" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Email" class="form-label fw-bold">
                                <i class="fas fa-envelope me-2 text-primary"></i>E-posta
                            </label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="ornek@email.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Phone" class="form-label fw-bold">
                                <i class="fas fa-phone me-2 text-primary"></i>Telefon
                            </label>
                            <input asp-for="Phone" class="form-control" placeholder="0555 123 45 67" />
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Password" class="form-label fw-bold">
                                <i class="fas fa-lock me-2 text-primary"></i>Şifre
                            </label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Boş bırakılırsa değişmez" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Geri Dön
                        </a>
                        <button type="submit" class="btn btn-warning btn-lg">
                            <i class="fas fa-save me-2"></i>Değişiklikleri Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 