@model SD_Sinema.Web.Models.UserViewModel

@{
    ViewData["Title"] = "Kullanıcı Detayları";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h2 fw-bold text-primary mb-2">
            <i class="fas fa-user me-2"></i>Kullanıcı Detayları
        </h1>
        <p class="text-muted mb-0">@Model.FirstName @Model.LastName</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Geri Dön
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card border-0 shadow">
            <div class="card-header bg-info text-white py-3">
                <h3 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Kullanıcı Bilgileri
                </h3>
            </div>
            <div class="card-body p-4">
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-primary bg-gradient rounded-circle p-3 me-3">
                                <i class="fas fa-user fa-2x text-white"></i>
                            </div>
                            <div>
                                <strong class="d-block">Ad</strong>
                                <span class="text-muted">@Model.FirstName</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-primary bg-gradient rounded-circle p-3 me-3">
                                <i class="fas fa-user fa-2x text-white"></i>
                            </div>
                            <div>
                                <strong class="d-block">Soyad</strong>
                                <span class="text-muted">@Model.LastName</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-info bg-gradient rounded-circle p-3 me-3">
                                <i class="fas fa-envelope fa-2x text-white"></i>
                            </div>
                            <div>
                                <strong class="d-block">E-posta</strong>
                                <span class="text-muted">@Model.Email</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-success bg-gradient rounded-circle p-3 me-3">
                                <i class="fas fa-phone fa-2x text-white"></i>
                            </div>
                            <div>
                                <strong class="d-block">Telefon</strong>
                                <span class="text-muted">@Model.Phone</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-12">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-secondary bg-gradient rounded-circle p-3 me-3">
                                <i class="fas fa-clock fa-2x text-white"></i>
                            </div>
                            <div>
                                <strong class="d-block">Kayıt Tarihi</strong>
                                <span class="text-muted">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Geri Dön
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i>Düzenle
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 