@model SD_Sinema.Web.Models.ReservationViewModel

@{
    ViewData["Title"] = "Rezervasyon Sil";
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card border-0 shadow">
            <div class="card-header bg-danger text-white py-3">
                <h3 class="mb-0">
                    <i class="fas fa-trash me-2"></i>Rezervasyon Sil
                </h3>
            </div>
            <div class="card-body p-4">
                <div class="alert alert-danger border-0">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <div>
                            <h4 class="alert-heading mb-2">Bu rezervasyonu silmek istediğinizden emin misiniz?</h4>
                            <p class="mb-0">Bu işlem geri alınamaz ve rezervasyon ile ilgili tüm veriler silinecektir.</p>
                        </div>
                    </div>
                </div>
                
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <div class="bg-primary bg-gradient rounded-circle p-2 me-3">
                                <i class="fas fa-user text-white"></i>
                            </div>
                            <div>
                                <strong>Kullanıcı:</strong><br>
                                <span class="text-muted">@Model.UserName</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <div class="bg-success bg-gradient rounded-circle p-2 me-3">
                                <i class="fas fa-calendar text-white"></i>
                            </div>
                            <div>
                                <strong>Seans:</strong><br>
                                <span class="text-muted">@Model.SessionInfo</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <div class="bg-warning bg-gradient rounded-circle p-2 me-3">
                                <i class="fas fa-calendar-day text-white"></i>
                            </div>
                            <div>
                                <strong>Rezervasyon Tarihi:</strong><br>
                                <span class="text-muted">@Model.ReservationDate.ToString("dd.MM.yyyy")</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <div class="bg-info bg-gradient rounded-circle p-2 me-3">
                                <i class="fas fa-users text-white"></i>
                            </div>
                            <div>
                                <strong>Koltuk Sayısı:</strong><br>
                                <span class="text-muted">@Model.SeatCount</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <div class="bg-danger bg-gradient rounded-circle p-2 me-3">
                                <i class="fas fa-money-bill text-white"></i>
                            </div>
                            <div>
                                <strong>Toplam Fiyat:</strong><br>
                                <span class="text-muted">@Model.TotalPrice.ToString("C")</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <div class="bg-secondary bg-gradient rounded-circle p-2 me-3">
                                <i class="fas fa-circle text-white"></i>
                            </div>
                            <div>
                                <strong>Durum:</strong><br>
                                <span class="@(Model.Status == "Onaylandı" ? "text-success" : Model.Status == "İptal Edildi" ? "text-danger" : "text-warning") fw-bold">
                                    @Model.Status
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <form asp-action="Delete" method="post" class="mt-4 pt-3 border-top">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>İptal
                        </a>
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="fas fa-trash me-2"></i>Rezervasyonu Sil
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 