@model SD_Sinema.Web.Models.ReservationViewModel

@{
    ViewData["Title"] = "Rezervasyon Düzenle";
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card border-0 shadow">
            <div class="card-header bg-warning text-dark py-3">
                <h3 class="mb-0">
                    <i class="fas fa-edit me-2"></i>Rezervasyon Düzenle
                </h3>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedAt" />
                    
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="UserId" class="form-label fw-bold">
                                <i class="fas fa-user me-2 text-primary"></i>Kullanıcı
                            </label>
                            <select asp-for="UserId" class="form-select form-select-lg" asp-items="@ViewBag.Users">
                                <option value="">Kullanıcı Seçin</option>
                            </select>
                            <span asp-validation-for="UserId" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="SessionId" class="form-label fw-bold">
                                <i class="fas fa-calendar me-2 text-primary"></i>Seans
                            </label>
                            <select asp-for="SessionId" class="form-select form-select-lg" asp-items="@ViewBag.Sessions">
                                <option value="">Seans Seçin</option>
                            </select>
                            <span asp-validation-for="SessionId" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="ReservationDate" class="form-label fw-bold">
                                <i class="fas fa-calendar-day me-2 text-primary"></i>Rezervasyon Tarihi
                            </label>
                            <input asp-for="ReservationDate" class="form-control" type="date" />
                            <span asp-validation-for="ReservationDate" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="SeatCount" class="form-label fw-bold">
                                <i class="fas fa-users me-2 text-primary"></i>Koltuk Sayısı
                            </label>
                            <input asp-for="SeatCount" class="form-control" type="number" min="1" />
                            <span asp-validation-for="SeatCount" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="TotalPrice" class="form-label fw-bold">
                                <i class="fas fa-money-bill me-2 text-primary"></i>Toplam Fiyat
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">₺</span>
                                <input asp-for="TotalPrice" class="form-control" type="number" step="0.01" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="TotalPrice" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Status" class="form-label fw-bold">
                                <i class="fas fa-info-circle me-2 text-primary"></i>Durum
                            </label>
                            <select asp-for="Status" class="form-select form-select-lg">
                                <option value="Beklemede">Beklemede</option>
                                <option value="Onaylandı">Onaylandı</option>
                                <option value="İptal Edildi">İptal Edildi</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Geri Dön
                        </a>
                        <button type="submit" class="btn btn-warning btn-lg">
                            <i class="fas fa-save me-2"></i>Değişiklikleri Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 