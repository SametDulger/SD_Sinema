@model SD_Sinema.Web.Models.MovieViewModel

@{
    ViewData["Title"] = "Yeni Film Ekle";
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card border-0 shadow">
            <div class="card-header bg-primary text-white py-3">
                <h3 class="mb-0">
                    <i class="fas fa-plus-circle me-2"></i>Yeni Film Ekle
                </h3>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create" method="post">
                    <div class="row g-3">
                        <div class="col-12">
                            <label asp-for="Title" class="form-label fw-bold">
                                <i class="fas fa-film me-2 text-primary"></i>Film Adı
                            </label>
                            <input asp-for="Title" class="form-control form-control-lg" placeholder="Film adını giriniz..." />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Description" class="form-label fw-bold">
                                <i class="fas fa-align-left me-2 text-primary"></i>Açıklama
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Film açıklamasını giriniz..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Duration" class="form-label fw-bold">
                                <i class="fas fa-clock me-2 text-primary"></i>Süre (dakika)
                            </label>
                            <input asp-for="Duration" class="form-control" type="number" min="1" max="300" placeholder="120" />
                            <span asp-validation-for="Duration" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="ReleaseYear" class="form-label fw-bold">
                                <i class="fas fa-calendar me-2 text-primary"></i>Yayın Yılı
                            </label>
                            <input asp-for="ReleaseYear" class="form-control" type="number" min="1900" max="2030" placeholder="2024" />
                            <span asp-validation-for="ReleaseYear" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="GenreId" class="form-label fw-bold">
                                <i class="fas fa-tag me-2 text-primary"></i>Tür
                            </label>
                            <select asp-for="GenreId" class="form-select" asp-items="@ViewBag.Genres">
                                <option value="">Tür seçiniz...</option>
                            </select>
                            <span asp-validation-for="GenreId" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Geri Dön
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-2"></i>Film Ekle
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 