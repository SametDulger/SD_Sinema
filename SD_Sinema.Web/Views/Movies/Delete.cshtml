@model SD_Sinema.Web.Models.MovieViewModel

@{
    ViewData["Title"] = "Film Sil";
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card border-0 shadow">
            <div class="card-header bg-danger text-white py-3">
                <h3 class="mb-0">
                    <i class="fas fa-trash me-2"></i>Film Sil
                </h3>
            </div>
            <div class="card-body p-4">
                <div class="alert alert-danger border-0">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <div>
                            <h4 class="alert-heading mb-2">Bu filmi silmek istediğinizden emin misiniz?</h4>
                            <p class="mb-0">Bu işlem geri alınamaz ve film ile ilgili tüm veriler silinecektir.</p>
                        </div>
                    </div>
                </div>
                
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <div class="bg-primary bg-gradient rounded-circle p-2 me-3">
                                <i class="fas fa-film text-white"></i>
                            </div>
                            <div>
                                <strong>Film Adı:</strong><br>
                                <span class="text-muted">@Model.Title</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <div class="bg-warning bg-gradient rounded-circle p-2 me-3">
                                <i class="fas fa-tag text-white"></i>
                            </div>
                            <div>
                                <strong>Tür:</strong><br>
                                <span class="text-muted">@Model.GenreName</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <div class="bg-success bg-gradient rounded-circle p-2 me-3">
                                <i class="fas fa-clock text-white"></i>
                            </div>
                            <div>
                                <strong>Süre:</strong><br>
                                <span class="text-muted">@Model.Duration dakika</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <div class="bg-info bg-gradient rounded-circle p-2 me-3">
                                <i class="fas fa-calendar text-white"></i>
                            </div>
                            <div>
                                <strong>Yayın Yılı:</strong><br>
                                <span class="text-muted">@Model.ReleaseYear</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-12">
                        <div class="d-flex align-items-start">
                            <div class="bg-secondary bg-gradient rounded-circle p-2 me-3 mt-1">
                                <i class="fas fa-align-left text-white"></i>
                            </div>
                            <div>
                                <strong>Açıklama:</strong><br>
                                <span class="text-muted">@Model.Description</span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <form asp-action="Delete" method="post" class="mt-4 pt-3 border-top">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>İptal
                        </a>
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="fas fa-trash me-2"></i>Filmi Sil
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 