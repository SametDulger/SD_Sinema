@model List<SD_Sinema.Web.Models.MovieViewModel>

@{
    ViewData["Title"] = "Filmler";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h2 fw-bold text-primary mb-2">
            <i class="fas fa-film me-2"></i>Filmler
        </h1>
        <p class="text-muted mb-0">Tüm filmlerimizi keşfedin</p>
    </div>
    <a asp-action="Create" class="btn btn-primary btn-lg">
        <i class="fas fa-plus me-2"></i>Yeni Film Ekle
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="row g-4">
        @foreach (var movie in Model)
        {
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="position-relative">
                        <div class="card-img-top bg-gradient-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="fas fa-film fa-3x text-white opacity-50"></i>
                        </div>
                        <div class="position-absolute top-0 end-0 m-3">
                            <span class="badge bg-primary fs-6">@movie.GenreName</span>
                        </div>
                        <div class="position-absolute top-0 start-0 m-3">
                            <span class="badge bg-warning text-dark fs-6">@movie.ReleaseYear</span>
                        </div>
                    </div>
                    <div class="card-body d-flex flex-column p-4">
                        <h5 class="card-title fw-bold mb-3">@movie.Title</h5>
                        <p class="card-text text-muted flex-grow-1">
                            @(movie.Description.Length > 100 ? movie.Description.Substring(0, 100) + "..." : movie.Description)
                        </p>
                        <div class="row text-muted small mb-3">
                            <div class="col-6">
                                <i class="fas fa-clock me-1"></i>@movie.Duration dk
                            </div>
                            <div class="col-6 text-end">
                                <i class="fas fa-calendar me-1"></i>@movie.ReleaseYear
                            </div>
                        </div>
                        <div class="mt-auto">
                            <div class="d-grid gap-2">
                                <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-primary">
                                    <i class="fas fa-info-circle me-2"></i>Detaylar
                                </a>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-outline-warning">
                                        <i class="fas fa-edit me-1"></i>Düzenle
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-outline-danger">
                                        <i class="fas fa-trash me-1"></i>Sil
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <div class="card border-0 bg-light">
            <div class="card-body py-5">
                <i class="fas fa-film fa-4x text-muted mb-3"></i>
                <h5 class="text-muted">Henüz film bulunmuyor</h5>
                <p class="text-muted mb-4">İlk filminizi ekleyerek başlayın!</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>İlk Filmi Ekle
                </a>
            </div>
        </div>
    </div>
}

<style>
    .bg-gradient-secondary {
        background: linear-gradient(135deg, #6c757d, #495057);
    }
    
    .opacity-50 {
        opacity: 0.5;
    }
</style> 