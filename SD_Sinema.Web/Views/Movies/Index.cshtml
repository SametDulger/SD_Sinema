@model List<SD_Sinema.Web.Models.MovieViewModel>

@{
    ViewData["Title"] = "Filmler";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Filmler</h2>
        <a asp-action="Create" class="btn btn-primary">Yeni Film Ekle</a>
    </div>

    <div class="row">
        @foreach (var movie in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@movie.Title</h5>
                        <p class="card-text">@movie.Description</p>
                        <p class="card-text"><small class="text-muted">Süre: @movie.Duration dakika</small></p>
                        <p class="card-text"><small class="text-muted">Yıl: @movie.ReleaseYear</small></p>
                        <p class="card-text"><small class="text-muted">Tür: @movie.Genre</small></p>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-outline-primary btn-sm">Detay</a>
                            <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-outline-warning btn-sm">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-outline-danger btn-sm">Sil</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 