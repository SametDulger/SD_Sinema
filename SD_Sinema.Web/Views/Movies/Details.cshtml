@model SD_Sinema.Web.Models.MovieViewModel

@{
    ViewData["Title"] = "Film Detayları";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3>Film Detayları</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Film Adı:</dt>
                        <dd class="col-sm-9">@Model.Title</dd>

                        <dt class="col-sm-3">Açıklama:</dt>
                        <dd class="col-sm-9">@Model.Description</dd>

                        <dt class="col-sm-3">Süre:</dt>
                        <dd class="col-sm-9">@Model.Duration dakika</dd>

                        <dt class="col-sm-3">Yayın Yılı:</dt>
                        <dd class="col-sm-9">@Model.ReleaseYear</dd>

                        <dt class="col-sm-3">Tür:</dt>
                        <dd class="col-sm-9">@Model.Genre</dd>

                        <dt class="col-sm-3">Oluşturulma Tarihi:</dt>
                        <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Düzenle</a>
                    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
                </div>
            </div>
        </div>
    </div>
</div> 