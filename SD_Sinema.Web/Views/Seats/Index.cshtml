@model List<SD_Sinema.Web.Models.SeatViewModel>

@{
    ViewData["Title"] = "Koltuklar";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Koltuklar</h2>
        <a asp-action="Create" class="btn btn-primary">Yeni Koltuk Ekle</a>
    </div>

    <div class="row">
        @foreach (var seat in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Koltuk @seat.SeatNumber</h5>
                        <p class="card-text"><strong>Salon:</strong> @seat.SalonName</p>
                        <p class="card-text"><strong>Sıra:</strong> @seat.RowNumber</p>
                        <p class="card-text"><small class="text-muted">Durum: @(seat.IsActive ? "Aktif" : "Pasif")</small></p>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Details" asp-route-id="@seat.Id" class="btn btn-outline-primary btn-sm">Detay</a>
                            <a asp-action="Edit" asp-route-id="@seat.Id" class="btn btn-outline-warning btn-sm">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@seat.Id" class="btn btn-outline-danger btn-sm">Sil</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 