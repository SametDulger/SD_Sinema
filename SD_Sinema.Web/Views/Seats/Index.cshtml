@model List<SD_Sinema.Web.Models.SeatViewModel>

@{
    ViewData["Title"] = "Koltuklar";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h2 fw-bold text-primary mb-2">
            <i class="fas fa-chair me-2"></i>Koltuklar
        </h1>
        <p class="text-muted mb-0">Tüm koltuklarınızı görüntüleyin</p>
    </div>
    <a asp-action="Create" class="btn btn-primary btn-lg">
        <i class="fas fa-plus me-2"></i>Yeni Koltuk Ekle
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="row g-4">
        @foreach (var seat in Model)
        {
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="position-relative">
                        <div class="card-img-top bg-gradient-secondary d-flex align-items-center justify-content-center" style="height: 120px;">
                            <i class="fas fa-chair fa-3x text-white opacity-75"></i>
                        </div>
                        <div class="position-absolute top-0 end-0 m-3">
                            <span class="badge @(seat.IsActive ? "bg-success" : "bg-danger") fs-6">
                                @(seat.IsActive ? "Aktif" : "Pasif")
                            </span>
                        </div>
                    </div>
                    <div class="card-body d-flex flex-column p-4">
                        <h5 class="card-title fw-bold mb-3">
                            <i class="fas fa-chair me-2 text-primary"></i>Koltuk @seat.SeatNumber
                        </h5>
                        <div class="row text-muted small mb-3">
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-building me-2 text-primary"></i>
                                    <span>@seat.SalonName</span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-sort-numeric-up me-2 text-primary"></i>
                                    <span>Sıra @seat.RowNumber</span>
                                </div>
                            </div>
                        </div>
                        <div class="mt-auto">
                            <div class="d-grid gap-2">
                                <a asp-action="Details" asp-route-id="@seat.Id" class="btn btn-primary">
                                    <i class="fas fa-info-circle me-2"></i>Detaylar
                                </a>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@seat.Id" class="btn btn-outline-warning">
                                        <i class="fas fa-edit me-1"></i>Düzenle
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@seat.Id" class="btn btn-outline-danger">
                                        <i class="fas fa-trash me-1"></i>Sil
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <div class="card border-0 bg-light">
            <div class="card-body py-5">
                <i class="fas fa-chair fa-4x text-muted mb-3"></i>
                <h5 class="text-muted">Henüz koltuk bulunmuyor</h5>
                <p class="text-muted mb-4">İlk koltuğunuzu ekleyerek başlayın!</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>İlk Koltuğu Ekle
                </a>
            </div>
        </div>
    </div>
}

<style>
    .bg-gradient-secondary {
        background: linear-gradient(135deg, #6c757d, #495057);
    }
    
    .opacity-75 {
        opacity: 0.75;
    }
</style> 