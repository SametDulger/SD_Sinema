@model SD_Sinema.Web.Models.SeatViewModel

@{
    ViewData["Title"] = "Yeni Koltuk Ekle";
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card border-0 shadow">
            <div class="card-header bg-primary text-white py-3">
                <h3 class="mb-0">
                    <i class="fas fa-plus-circle me-2"></i>Yeni Koltuk Ekle
                </h3>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create" method="post">
                    <div class="row g-3">
                        <div class="col-12">
                            <label asp-for="SalonId" class="form-label fw-bold">
                                <i class="fas fa-building me-2 text-primary"></i>Salon
                            </label>
                            <select asp-for="SalonId" class="form-select form-select-lg" asp-items="@ViewBag.Salons">
                                <option value="">Salon Seçin</option>
                            </select>
                            <span asp-validation-for="SalonId" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="SeatNumber" class="form-label fw-bold">
                                <i class="fas fa-chair me-2 text-primary"></i>Koltuk Numarası
                            </label>
                            <input asp-for="SeatNumber" class="form-control" placeholder="A1, B5, C12..." />
                            <span asp-validation-for="SeatNumber" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="RowNumber" class="form-label fw-bold">
                                <i class="fas fa-sort-numeric-up me-2 text-primary"></i>Sıra Numarası
                            </label>
                            <input asp-for="RowNumber" class="form-control" type="number" min="1" placeholder="1" />
                            <span asp-validation-for="RowNumber" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="IsActive" class="form-check-label fw-bold">
                                    <i class="fas fa-toggle-on me-2 text-success"></i>Aktif
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Geri Dön
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-2"></i>Koltuk Ekle
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 