@model SD_Sinema.Web.Models.SalonViewModel

@{
    ViewData["Title"] = "Salon Düzenle";
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card border-0 shadow">
            <div class="card-header bg-warning text-dark py-3">
                <h3 class="mb-0">
                    <i class="fas fa-edit me-2"></i>Salon Düzenle
                </h3>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedAt" />
                    
                    <div class="row g-3">
                        <div class="col-12">
                            <label asp-for="Name" class="form-label fw-bold">
                                <i class="fas fa-building me-2 text-primary"></i>Salon Adı
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Salon adını giriniz" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Description" class="form-label fw-bold">
                                <i class="fas fa-align-left me-2 text-primary"></i>Açıklama
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Salon açıklamasını giriniz"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Capacity" class="form-label fw-bold">
                                <i class="fas fa-users me-2 text-primary"></i>Kapasite
                            </label>
                            <input asp-for="Capacity" class="form-control" type="number" min="1" max="500" placeholder="100" />
                            <span asp-validation-for="Capacity" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <div class="form-check form-switch mt-4 pt-3">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="IsActive" class="form-check-label fw-bold">
                                    <i class="fas fa-toggle-on me-2 text-success"></i>Aktif
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Geri Dön
                        </a>
                        <button type="submit" class="btn btn-warning btn-lg">
                            <i class="fas fa-save me-2"></i>Değişiklikleri Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 