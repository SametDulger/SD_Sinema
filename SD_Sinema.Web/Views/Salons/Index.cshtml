@model IEnumerable<SD_Sinema.Web.Models.SalonViewModel>

@{
    ViewData["Title"] = "Salonlar";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Salonlar</h2>
        <a asp-action="Create" class="btn btn-primary">Yeni Salon Ekle</a>
    </div>

    <div class="row">
        @foreach (var salon in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@salon.Name</h5>
                        <p class="card-text">@salon.Description</p>
                        <p class="card-text"><small class="text-muted">Kapasite: @salon.Capacity kişi</small></p>
                        <p class="card-text"><small class="text-muted">Durum: @(salon.IsActive ? "Aktif" : "Pasif")</small></p>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Details" asp-route-id="@salon.Id" class="btn btn-outline-primary btn-sm">Detay</a>
                            <a asp-action="Edit" asp-route-id="@salon.Id" class="btn btn-outline-warning btn-sm">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@salon.Id" class="btn btn-outline-danger btn-sm">Sil</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 