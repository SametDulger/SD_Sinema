@model IEnumerable<SD_Sinema.Web.Models.TicketTypeViewModel>

@{
    ViewData["Title"] = "Bilet Türleri";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h2 fw-bold text-primary mb-2">
            <i class="fas fa-tag me-2"></i>Bilet Türleri
        </h1>
        <p class="text-muted mb-0">Tüm bilet türlerinizi görüntüleyin</p>
    </div>
    <a asp-action="Create" class="btn btn-primary btn-lg">
        <i class="fas fa-plus me-2"></i>Yeni Bilet Türü Ekle
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="row g-4">
        @foreach (var ticketType in Model)
        {
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="position-relative">
                        <div class="card-img-top bg-gradient-danger d-flex align-items-center justify-content-center" style="height: 120px;">
                            <i class="fas fa-tag fa-3x text-white opacity-75"></i>
                        </div>
                        <div class="position-absolute top-0 end-0 m-3">
                            <span class="badge @(ticketType.IsActive ? "bg-success" : "bg-danger") fs-6">
                                @(ticketType.IsActive ? "Aktif" : "Pasif")
                            </span>
                        </div>
                    </div>
                    <div class="card-body d-flex flex-column p-4">
                        <h5 class="card-title fw-bold mb-3">@ticketType.Name</h5>
                        <p class="card-text text-muted flex-grow-1">
                            @(ticketType.Description?.Length > 100 ? ticketType.Description.Substring(0, 100) + "..." : ticketType.Description ?? "Açıklama bulunmuyor")
                        </p>
                        <div class="row text-muted small mb-3">
                            <div class="col-6">
                                <i class="fas fa-money-bill me-1"></i>@ticketType.Price.ToString("C")
                            </div>
                            <div class="col-6 text-end">
                                <i class="fas fa-circle me-1 @(ticketType.IsActive ? "text-success" : "text-danger")"></i>
                                @(ticketType.IsActive ? "Aktif" : "Pasif")
                            </div>
                        </div>
                        <div class="mt-auto">
                            <div class="d-grid gap-2">
                                <a asp-action="Details" asp-route-id="@ticketType.Id" class="btn btn-primary">
                                    <i class="fas fa-info-circle me-2"></i>Detaylar
                                </a>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@ticketType.Id" class="btn btn-outline-warning">
                                        <i class="fas fa-edit me-1"></i>Düzenle
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@ticketType.Id" class="btn btn-outline-danger">
                                        <i class="fas fa-trash me-1"></i>Sil
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <div class="card border-0 bg-light">
            <div class="card-body py-5">
                <i class="fas fa-tag fa-4x text-muted mb-3"></i>
                <h5 class="text-muted">Henüz bilet türü bulunmuyor</h5>
                <p class="text-muted mb-4">İlk bilet türünüzü ekleyerek başlayın!</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>İlk Bilet Türünü Ekle
                </a>
            </div>
        </div>
    </div>
}

<style>
    .bg-gradient-danger {
        background: linear-gradient(135deg, #dc3545, #b02a37);
    }
    
    .opacity-75 {
        opacity: 0.75;
    }
</style> 