@model SD_Sinema.Web.Models.TicketViewModel

@{
    ViewData["Title"] = "Bilet Sil";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3>Bilet Sil</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4>Bu bileti silmek istediğinizden emin misiniz?</h4>
                    </div>
                    
                    <dl class="row">
                        <dt class="col-sm-3">Rezervasyon:</dt>
                        <dd class="col-sm-9">@Model.ReservationInfo</dd>

                        <dt class="col-sm-3">Bilet Türü:</dt>
                        <dd class="col-sm-9">@Model.TicketTypeName</dd>

                        <dt class="col-sm-3">Koltuk:</dt>
                        <dd class="col-sm-9">@Model.SeatInfo</dd>

                        <dt class="col-sm-3">Fiyat:</dt>
                        <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                        <dt class="col-sm-3">Durum:</dt>
                        <dd class="col-sm-9">@Model.Status</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Sil</button>
                        <a asp-action="Index" class="btn btn-secondary">İptal</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 