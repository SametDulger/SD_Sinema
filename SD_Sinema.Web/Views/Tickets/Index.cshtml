@model List<SD_Sinema.Web.Models.TicketViewModel>

@{
    ViewData["Title"] = "Biletler";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Biletler</h2>
        <a asp-action="Create" class="btn btn-primary">Yeni Bilet Ekle</a>
    </div>

    <div class="row">
        @foreach (var ticket in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Bilet #@ticket.Id</h5>
                        <p class="card-text"><strong>Rezervasyon:</strong> @ticket.ReservationInfo</p>
                        <p class="card-text"><strong>Bilet Türü:</strong> @ticket.TicketTypeName</p>
                        <p class="card-text"><strong>Koltuk:</strong> @ticket.SeatInfo</p>
                        <p class="card-text"><strong>Fiyat:</strong> @ticket.Price.ToString("C")</p>
                        <p class="card-text"><small class="text-muted">Durum: @ticket.Status</small></p>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Details" asp-route-id="@ticket.Id" class="btn btn-outline-primary btn-sm">Detay</a>
                            <a asp-action="Edit" asp-route-id="@ticket.Id" class="btn btn-outline-warning btn-sm">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@ticket.Id" class="btn btn-outline-danger btn-sm">Sil</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 